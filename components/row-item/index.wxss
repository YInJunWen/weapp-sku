/* components/sku/components/row-item/index.wxss */
.sku-row-item {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin: 0 12px 12px 0;
  font-size: 13px;
  line-height: 16px;
  min-width: 40px;
  background-color: #f7f8fa;
  border-radius: 4px;
  vertical-align: middle;
}

.sku-row-item.active {
  color: #ee0a24;
  background-color: #feeaeb;
}

.sku-row-item.disabled {
  color: #c8c9cc;
  cursor: not-allowed;
  /* pointer-events: none; */
}

.sku-row-item-name {
  z-index: 1;
  padding: 8px;
}

.sku-row-item-img {
  z-index: 1;
  width: 24px;
  height: 24px;
  margin: 4px 0 4px 4px;
  border-radius: 2px;
}

.sku-row-item-thumb {
  display: block;
  width: 100%;
  height: 100%;
}

.sku-row-item.disabled .sku-row-item-img {
  opacity: 0.3;
}